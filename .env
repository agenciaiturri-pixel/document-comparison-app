# Configuración del servidor
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=production

# Directorios
UPLOAD_DIR=./uploads
REPORTS_DIR=./reports

# Base de datos (opcional para versión básica)
DATABASE_URL=postgresql://user:password@localhost:5432/doccompare

# Seguridad
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANG=spa+eng

# Logging
LOG_LEVEL=INFO